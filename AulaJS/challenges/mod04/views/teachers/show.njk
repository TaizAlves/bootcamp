{% extends "layout.njk" %}

{% block content %}

<div class="card">

    <section 
    class="avatar"
    style= "background: url({{teacher.avatar_url}}) no-repeat center center/cover"></section>

    <section class="details">
    <h3>Professor</h3>

    <div class="item">
        <div>Professor</div>
        <div>{{teacher.name}}</div>
    </div>

     <div class="item">
        <div>Idade</div>
        <div>{{teacher.age}}</div>
    </div>

     <div class="item">
        <div>Grau de escolaridade</div>
        <div>

        <option >{{teacher.graduation}}</option>

        </div>
    </div>

     <div class="item">
        <div>Tipo de Aula</div>
        <div>{{"Presencial" if teacher.location == "Presencial" else "À distância"}}
         
        </div>
    </div>

     <div class="item">
        <div>Acompanhamento</div>
        <div>
        {% for sub in teacher.subject%}
        <span>{{sub}}</span>
        {%endfor%}  
        </div>
    </div>

     <div class="item">
        <div>Desde</div>
        <div>{{teacher.created_at}}</div>
    </div>
    
    <a href="/teachers/{{teacher.id}}"class= "button">Editar</a>
    
    </section>


</div>



{% endblock content %}