{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">


<a href="/students/create">Novo</a>

    <table width="100%">
    
    <thead>
        <tr>
            <th>Nome completo</th>
            <th>Email</th>
            <th >Ano Escolar</th>
            <th>Carga Horária semanal</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
    {%for student in students%}
    <tr>
        <td>
        <span style= "background-image: url({{student.avatar_url}})"></span>
        {{student.name}}</td>

        <td>{{student.email}}</td>
        <td>{{student.grade}}</td>
        <td>{{student.carga}}h</td>


        
        
        <td class= "sub"> 
        {%for sub in student.subject%}
        <span>{{sub}}</span>
        {%endfor%}
        </td>
        
    

        <td><a href="/students/{{student.id}}">Ver</a></td>
    
    </tr>

    {%endfor%}
    
    
    
    
    </tbody>
    
    </table>


</div>



{% endblock content %}