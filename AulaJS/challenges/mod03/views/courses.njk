{% extends "layout.njk" %}

{%block head%}

<title>Cursos - Rocketseat (launchbase)</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
rel="stylesheet">


{% endblock%}

{% block content%}

        <div id="wrapper">
               <h1>Conte√∫dos</h1>
        </div>


        <section class="cards">

            {% for item in items %}
            <div class="card" id = "{{item.id}}">

                <div class="card-img">
                    <img src="{{item.img}}" alt="Imagem de {{item.title}}">
                </div>

                <div class="card-title">
                    <p>{{item.title}}</p>
                </div>
                <div class="card-info">
                    <p>{{item.duration}}</p>
                    <p class="card-price">{{item.price}}</p>
                </div>
            </div>

            {% endfor %}

        </section>

            <div class="modal-overlay">
                <div class="modal">
                    <a class="close-modal">
                        <i class="material-icons">close</i>
                    </a>
                    <a class="maximize-modal">
                        <i class="material-icons">maximize</i>  
                    </a> 
                    <div class="modal-content">
                        <iframe src="" frameborder="0"></iframe>
                        
                    </div>
                    
                </div>
            </div>
        

        <script src="java.js"></script>


        {% endblock  %}