{% extends "layout.njk" %}

{%block head%}
    <title>{{item.title}}</title>
{%endblock%}

{%block content %}

        
<div class="recipes">

    <div class="recipe" >
        <div id="card">
            <div class="img-recipe">  
                <img src="{{item.image}}" alt="Imagem de {{item.title}}">
            </div>
            <div class="recipe-h2">
                <h2>{{item.title}}</h2>
            </div>
            <div class="recipe-p">
                <p>por {{item.author}}</p>
            </div>
        </div>
            <div class="ingredient">
                <div class="top">
                    <h3>Ingredientes</h3>
                    <button >esconder</button>
                </div>
                <div class="content_detail">
                <ul>
                {%for ingredient in item.ingredients %}
                    <li>{{ingredient}}</li>
                {%endfor%}
                </ul>
                </div>
            </div>
            <div class="preparation">   
                <div class="top">        
                    <h3>Modo de Preparo</h3>
                    <button >mostrar</button>
                </div>

                <div class="content_detail">
                <ul>
                {%for prepar  in item.preparation%}
                    <li>{{prepar}}</li>
                {%endfor%}
                </ul>
                </div>
            </div>
            <div class="information">
                <div class="top">
                    <h3>Informações Adicionais</h3>
                    <button>esconder</button>  
                </div> 
                <div class="content_detail">
                    <p>{{item.information}}</p>
                </div> 
            </div>            
</div>           
</div>

<script src="scriptfoodfy.js"></script>

{% endblock %}


