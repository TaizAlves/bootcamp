{% extends "layout.njk" %}

{%block head%}
    <title>Receitas- Foodfy</title>
{%endblock%}

{%block content %}


    <div class="recipes">
        
        {% for item in items %}
        <div class="recipe" id = "{{item.id}}">
            <div class="img-recipe">  
                <img src="{{item.image}}" alt="Imagem de {{item.title}}">
            </div>
            <div class="recipe-h2">
                <h2>{{item.title}}Tr</h2>
            </div>
            <div class="recipe-p">
                <p>por {{item.author}}</p>
            </div>
        </div>

        {% endfor %}
            
    </div>
   
</div>

<script src="scriptfoodfy.js"></script>

{% endblock %}
